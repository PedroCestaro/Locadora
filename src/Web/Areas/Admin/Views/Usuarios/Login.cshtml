@inherits ModelWebViewPage<Login>
@{
    ViewBag.Title = "LoginUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login Usuario</h2>
<div class="container">
        @using (Html.BeginForm())
        {
            <div class="col-lg-12">
                @this.Label(x => x.User).Class("control-label").Value("Login:")
                @this.TextBox(x => x.User).Class("required form-control").Autofocus(true).Required(true)
                @Html.ValidationMessageFor(x => x.User)
            </div>
            <div class="col-lg-12">
                @this.Label(x => x.Password).Class("control-label").Value("Senha:")
                @this.Password(x => x.Password).Class("required form-control").Autofocus(true).Required(true)
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div class="col-md-12 text-center" style="margin-top: 15px;">
                <button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action(MVC.Admin.Usuarios.Cadastrar())'">
                    <i class="fas fa-times"></i> Cadastre-se
                </button>
                <button type="submit" class="btn btn-primary btn-lg"
                        id="submitButton">
                    <i class="fas fa-check"></i> Entrar
                </button>
            </div>
        }
   
</div>

